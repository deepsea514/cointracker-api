  "description": "Every exchange has a factory address/contract Everytime a swap occurs a 'transfer' even gets fired off that we can listen too Current liquidity for a each pair can be pulled onchain",
  "main": "index.js",
  "scripts": {
    "start": "node --max_old_space_size=16384 -r ts-node/register -r dotenv/config src/index.ts",
    "dev": "TS_NODE_ENV=1 NODE_OPTIONS='--max_old_space_size=16384' node-dev -r dotenv/config src/index.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker-dev": "NODE_OPTIONS='--max_old_space_size=16384' node-dev -r dotenv/config src/index.ts",
    "test": "mocha -r dotenv/config  -r ts-node/register 'tests/**/*.tests.ts'",
    "test@burns": "mocha -r dotenv/config  -r ts-node/register 'tests/**/burns.tests.ts'",
    "test@chains": "mocha -r dotenv/config  -r ts-node/register 'tests/**/chains.tests.ts'",
    "test@swaps": "mocha -r dotenv/config  -r ts-node/register 'tests/**/swaps.tests.ts'",
    "test@mints": "mocha -r dotenv/config  -r ts-node/register 'tests/**/mints.tests.ts'",
    "test@tokens": "mocha -r dotenv/config  -r ts-node/register 'tests/**/tokens.tests.ts'"
